{
  "name": "myapp-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "web": "yarn build && dotenv -- turbo run dev --filter next-app",
    "native": "cd apps/expo && yarn start",
    "watch": "yarn workspaces foreach -pi run watch",
    "clean": "rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "postinstall": "yarn build",
    "build": "yarn workspaces foreach --exclude next-app -pi run build",
    "db-push": "turbo db-push",
    "generate": "cd packages/db && yarn prisma generate",
    "studio": " cd packages/db && yarn prisma:studio",
    "upgrade:tamagui": "manypkg upgrade tamagui && manypkg upgrade @tamagui && manypkg upgrade tamagui-loader"
  },
  "resolutions": {
    "esbuild": "0.15.6",
    "@types/react": "17.0.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-refresh": "^0.14.0",
    "react-native-svg": "13.4.0",
    "react-native-web": "0.18.9"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0"
  },
  "devDependencies": {
    "@manypkg/cli": "^0.19.1",
    "eslint": "^8.21.0",
    "prettier": "^2.7.1",
    "turbo": "^1.4.2",
    "typescript": "^4.7.4"
  }
}
